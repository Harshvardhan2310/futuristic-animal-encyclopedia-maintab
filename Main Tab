import React, { useState } from "react";
import { Input } from "@/components/ui/input";
import { Card, CardContent } from "@/components/ui/card";
import { motion } from "framer-motion";

const animals = [
  {
    name: "Panthera leo",
    common: "Lion",
    image: "/images/lion.png",
  },
  {
    name: "Panthera tigris",
    common: "Tiger",
    image: "/images/tiger.png",
  },
  {
    name: "Mammuthus primigenius",
    common: "Woolly Mammoth",
    image: "/images/mammoth.png",
  },
  // Add more animals here
];

export default function MainTab() {
  const [search, setSearch] = useState("");

  const filteredAnimals = animals.filter((animal) =>
    animal.common.toLowerCase().includes(search.toLowerCase())
  );

  return (
    <div className="min-h-screen bg-gradient-to-br from-black via-gray-900 to-blue-950 text-white p-6">
      <h1 className="text-4xl font-bold text-center mb-6">
        Futuristic Animal Encyclopedia
      </h1>
      <div className="max-w-xl mx-auto mb-8">
        <Input
          className="rounded-xl p-4 text-lg bg-gray-800 text-white border-0 shadow-lg"
          placeholder="Search for an animal species..."
          value={search}
          onChange={(e) => setSearch(e.target.value)}
        />
      </div>
      <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {filteredAnimals.map((animal, index) => (
          <motion.div
            key={index}
            whileHover={{ scale: 1.05 }}
            whileTap={{ scale: 0.98 }}
            className="cursor-pointer"
          >
            <Card className="bg-gradient-to-br from-blue-900 to-black border border-blue-500/20 rounded-2xl shadow-xl">
              <CardContent className="p-4 flex flex-col items-center">
                <img
                  src={animal.image}
                  alt={animal.common}
                  className="w-32 h-32 object-contain mb-4"
                />
                <h2 className="text-xl font-semibold">{animal.common}</h2>
                <p className="text-sm text-blue-300 italic">{animal.name}</p>
              </CardContent>
            </Card>
          </motion.div>
        ))}
      </div>
    </div>
  );
}
